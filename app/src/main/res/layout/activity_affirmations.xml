<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6AAE75"
    tools:context=".affirmations">

    <ImageButton
        android:id="@+id/affirmationbutton"
        android:layout_width="194dp"
        android:layout_height="76dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/button_bacgroun_menu2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_bacgroun_menu2" />

    <TextView
        android:id="@+id/affirmation"
        android:layout_width="324dp"
        android:layout_height="136dp"
        android:layout_marginTop="156dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="You are loved just for being who you are, just for existing"
        android:textAlignment="center"
        android:textColor="#004D40"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feeloved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="I feel loved!"
        android:textColor="#CBFDCD"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="@+id/affirmationbutton"
        app:layout_constraintEnd_toEndOf="@+id/affirmationbutton"
        app:layout_constraintStart_toStartOf="@+id/affirmationbutton"
        app:layout_constraintTop_toTopOf="@+id/affirmationbutton" />

    <TextView
        android:id="@+id/person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Ram Dass"
        android:textColor="#004D40"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/affirmation" />

</androidx.constraintlayout.widget.ConstraintLayout>